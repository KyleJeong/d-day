<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:id="@+id/layout"

    >

        <ImageButton
            android:background="#00000000"
            android:id= "@+id/imgbutton"
            android:padding="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src = "@drawable/widget"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:textColor="#ffffffff"
            android:padding="10dp"
            android:text ="test"
            android:id="@+id/ddayCount2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="45dp"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_gravity="right|center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    <TextView

        android:textColor="#ffffffff"
        android:text ="test"
        android:id="@+id/ddayTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="25dp"
        android:layout_gravity="center_vertical"
        android:paddingRight="20dp"

        android:layout_above="@+id/ddayDate2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:paddingBottom="5dp"
        android:paddingRight="20dp"
        android:textColor="#fffffc0e"
        android:text ="test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/ddayDate2"
        android:layout_gravity="right|bottom"
        android:layout_alignBottom="@+id/ddayCount2"
        android:layout_alignRight="@+id/ddayTitle2"
        android:layout_alignEnd="@+id/ddayTitle2" />


</RelativeLayout>